<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Feedbacks</title>  
  <style>
h1 {
      color: #1e3a8a;
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 1.5rem;
    }
    .container {
      max-width: 1000px;
      margin: auto;
    }
    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }
    .search-wrapper {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      flex-grow: 1;
      margin-right: 1rem;
    }
    #search-input {
      flex-grow: 1;
      padding: 0.6rem 1rem;
      border: 1px solid #cbd5e1;
      border-radius: 0.5rem;
      font-size: 1rem;
      outline: none;
    }
    #search-input:focus {
      border-color: #3b82f6;
      box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
    }
    #search-button {
      background: transparent;
      border: none;
      cursor: pointer;
      color: #2563eb;
    }
    #search-button:hover {
      color: #1e40af;
    }
    .create-button {
      background-color: #16a34a;
      color: white;
      padding: 0.6rem 1.2rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-size: 0.95rem;
      transition: 0.2s;
    }
    .create-button:hover {
      background-color: #15803d;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      border: 2px solid #94a3b8;
      border-radius: 0.5rem;
      overflow: hidden;
    }
    thead {
      background-color: #c1a59a;
      color: white;
      text-transform: uppercase;
      font-size: 0.9rem;
    }
    th, td {
      padding: 1rem;
      text-align: left;
      border: 1px solid #cbd5e1;
    }
    tbody tr {
      transition: background-color 0.2s ease;
    }
    tbody tr:hover {
      background-color: #f1f5f9;
    }
    .action-buttons {
  display: flex;
  align-items: center; /* Align vertically */
  justify-content: flex-start; /* Optional */
  gap: 0.5rem;
  flex-wrap: wrap; /* If too tight, wrap to next line */
}

    .update-button {
      background-color: #2563eb;
      color: white;
      padding: 0.4rem 0.8rem;
      border: none;
      border-radius: 0.375rem;
      font-size: 0.85rem;
      cursor: pointer;
      text-decoration: none;
    }
    .update-button:hover {
      background-color: #1e40af;
    }
    .delete-button {
      background-color: #dc2626;
      color: white;
      padding: 0.4rem 0.8rem;
      border: none;
      border-radius: 0.375rem;
      font-size: 0.85rem;
      cursor: pointer;
    }
    .delete-button:hover {
      background-color: #b91c1c;
    }
    .empty-message {
      text-align: center;
      color: #6b7280;
      font-size: 1rem;
      margin-top: 2rem;
    }  </style>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const searchInput = document.getElementById("search-input");
      const feedbackList = document.getElementById("feedback-list");
      let timeoutId;

      searchInput.addEventListener("input", function () {
        clearTimeout(timeoutId);
        const query = searchInput.value.trim();
        timeoutId = setTimeout(() => {
        fetch(`/feedbacks?search=${encodeURIComponent(query)}`)
            .then(response => response.text())
            .then(html => {
              const parser = new DOMParser();
              const doc = parser.parseFromString(html, "text/html");
              const newList = doc.getElementById("feedback-list");
              if (newList) {
                feedbackList.innerHTML = newList.innerHTML;
              }
            });
        }, 100);
      });
    });
  </script>
</head>
<body>
  <div class="container">
    <h1>User Feedbacks</h1>
    <div class="top-bar">
      <div class="search-wrapper">
        <input type="text" id="search-input" name="search" placeholder="Search by name"  />
      </div>
      <a href="/feedback/create" class="create-button">+ Create</a>
    </div>

    <div id="feedback-list">
      <%= if Enum.empty?(@user_feedbacks) do %>
        <p class="empty-message">No feedback received yet.</p>
      <% else %>
        <table>
          <thead>
            <tr>
              <th>Full Name</th>
              <th>Email</th>
              <th>Feedback</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <%= for feedback <- @user_feedbacks do %>
              <tr>
                <td><%= feedback.firstname <> " " <> feedback.lastname %></td>
                <td><%= feedback.email %></td>
                <td><%= feedback.feedback %></td>
                <td>
                  <div class="action-buttons">
                    <a href={"/feedback/edit/#{feedback.id}"} class="update-button">Update</a>
                    <form method="post" action={"/feedback/delete/#{feedback.id}"} style="display:inline">
                      <input type="hidden" name="_method" value="delete" />
                      <input type="hidden" name="_csrf_token" value={Plug.CSRFProtection.get_csrf_token()} />
                      <button type="submit" class="delete-button" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</body>
</html>