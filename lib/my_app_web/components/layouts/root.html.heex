<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title><%= assigns[:page_title] || "Feedbackly" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" />
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
</head>

<body class="bg-slate-50 font-sans" style="font-family: Inter, sans-serif;">

  <div class="min-h-screen flex flex-col overflow-x-hidden">

    <!-- ✅ Navbar -->
    <%= unless @conn.request_path == "/products-live" do %>
      <header class="border-b border-slate-200 bg-white shadow-sm px-6 py-4 md:px-10 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 48 48">
            <path d="M8.578 8.578a22 22 0 1130.844 30.844L24 24 8.578 8.578z" />
          </svg>
          <h1 class="text-xl font-bold text-gray-900">Feedbackly</h1>
        </div>
        <nav class="hidden md:flex gap-6 text-lg font-medium text-gray-700">
          <.link navigate={~p"/"} class="hover:text-blue-600">Home</.link>
          <.link navigate={~p"/about"} class="hover:text-blue-600">About</.link>
          <.link navigate={~p"/contact"} class="hover:text-blue-600">Contact</.link>
          <.link navigate={~p"/dashboard"} class="hover:text-blue-600">Feedback</.link>
        </nav>

        <div class="flex gap-2">
          <%= if @current_user do %>
            <!-- Profile Button -->
            <button id="profileBtn" class="flex items-center space-x-2 bg-slate-200 text-blue-800 px-4 py-2 rounded-md font-semibold hover:bg-slate-300 transition">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M5.121 17.804A13.944 13.944 0 0112 15c2.5 0 4.847.735 6.879 2.004M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>Profile</span>
            </button>

            <.link navigate={~p"/logout"} class="bg-slate-200 text-red-800 px-4 py-2 rounded-md font-semibold hover:bg-slate-300 transition">
              Logout
            </.link>
          <% else %>
            <.link navigate={~p"/user/signup"} class="bg-blue-600 text-white px-4 py-2 rounded-md font-semibold hover:bg-blue-700 transition">
              Signup
            </.link>
            <.link navigate={~p"/user/login"} class="bg-slate-200 text-gray-800 px-4 py-2 rounded-md font-semibold hover:bg-slate-300 transition">
              Login
            </.link>
          <% end %>
        </div>
      </header>
    <% end %>

    <!-- ✅ Page Content -->
    <main class="flex-grow">
      <%= @inner_content %>
    </main>

    <!-- ✅ Footer -->
    <footer class="bg-slate-100 text-gray-700 mt-auto">
      <div class="max-w-screen-xl mx-auto px-6 py-10 grid grid-cols-1 md:grid-cols-3 gap-10">
        <div>
          <h4 class="text-xl font-bold mb-2 text-gray-900">Feedbackly</h4>
          <p class="text-sm text-gray-600">Collect and manage customer feedback to grow better and smarter.</p>
        </div>
        <div>
          <h4 class="text-lg font-semibold mb-3 text-gray-900">Quick Links</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/" class="hover:text-blue-500 transition">Home</a></li>
            <li><a href="/about" class="hover:text-blue-500 transition">About</a></li>
            <li><a href="/contact" class="hover:text-blue-500 transition">Contact</a></li>
            <li><a href="/feedback" class="hover:text-blue-500 transition">Feedback</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-lg font-semibold mb-3 text-gray-900">Follow Us</h4>
          <div class="flex space-x-4">
            <!-- Social Icons Here -->
          </div>
        </div>
      </div>
      <div class="bg-slate-200 text-center text-sm py-4 text-gray-600">
        © 2025 Feedbackly. All rights reserved.
      </div>
    </footer>
  </div>
   
 <%= if @current_user do %>
  <div id="profileModal" class="fixed top-20 right-10 w-96 bg-white rounded-xl shadow-2xl p-6 border border-gray-200 z-50 hidden">
    <div class="flex items-center space-x-4">
      <div class="bg-blue-600 rounded-full h-12 w-12 flex items-center justify-center text-white text-lg font-bold uppercase">
        <%= String.first(@current_user.name || "U") %>
      </div>
      <div>
        <h2 class="text-lg font-semibold"><%= @current_user.name || "Unknown User" %></h2>
        <p class="text-sm text-gray-600"><%= @current_user.email || "No Email" %></p>
      </div>
    </div>

    <hr class="my-4" />

    <div class="space-y-2">
      <a href="#" class="flex items-center text-gray-700 hover:text-blue-700">
        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path d="M12 4v16m8-8H4"></path>
        </svg>
        Settings
      </a>
      <a href="#" class="flex items-center text-gray-700 hover:text-blue-700">
        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path d="M13 16h-1v-4h-1m1-4h.01"></path>
        </svg>
        Help and Resources
      </a>
      <a href="#" class="flex items-center text-gray-700 hover:text-blue-700">
        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path d="M5 13l4 4L19 7"></path>
        </svg>
        Reset Password
      </a>
      <a href="/logout" class="flex items-center text-red-600 font-medium hover:text-red-800">
        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
          <path d="M17 16l4-4m0 0l-4-4m4 4H7"></path>
        </svg>
        Logout
      </a>
    </div>
  </div>
<% end %>
  <!-- ✅ JS to Toggle Modal -->
  <script>
    const profileBtn = document.getElementById("profileBtn");
    const profileModal = document.getElementById("profileModal");

    profileBtn?.addEventListener("click", () => {
      profileModal.classList.toggle("hidden");
    });

    document.addEventListener("click", (e) => {
      if (!profileModal.contains(e.target) && !profileBtn.contains(e.target)) {
        profileModal.classList.add("hidden");
      }
    });
  </script>
</body>

</html>
